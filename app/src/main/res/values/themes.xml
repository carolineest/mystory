<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyStory" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->

        <!-- Primary color -->
        <item name="colorPrimary">@color/peach</item>
        <item name="colorPrimaryVariant">@color/coral_pink</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondaryVariant">@color/maroon</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Other attributes -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <style name="Theme.MyStory" parent="Base.Theme.MyStory" />
</resources>